<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include("partial/head") %>
	</head>

	<body>
		<div class="container profile-container py-4">
			<div class="row justify-content-center">
				<div class="col-10 col-md-6 col-lg-5">
					<h1 class="mb-3">Hello, <%= data.username %></h1>

					<% if (success) { %> <%- include('./partial/successMessage', {message: success[0]}) %> <% } else if (error) { %> <%-
					include('./partial/errorMessage', {message: error[0]}) %> <% } %>

					<div class="players-form">
						<div class="form-floating">
							<input
								type="text"
								class="form-control"
								id="input-username"
								name="username"
								placeholder="Username"
								value="<%= data.username %>"
								form="updateSubmit"
							/>
							<label for="input-username">Username</label>
						</div>
						<div class="form-floating my-4">
							<input
								type="email"
								class="form-control"
								id="input-email"
								name="email"
								placeholder="name@example.com"
								value="<%= data.email %>"
								form="updateSubmit"
							/>
							<label for="input-email">Email address</label>
						</div>
						<div class="form-floating my-4">
							<input type="password" class="form-control" id="input-password" name="password" placeholder="Password" form="updateSubmit" />
							<label for="input-password">Password</label>
						</div>
						<div class="form-floating my-4">
							<input
								type="number"
								class="form-control"
								id="input-age"
								name="age"
								placeholder="Age"
								value="<%= data.biodata.age %>"
								form="updateSubmit"
							/>
							<label for="input-age">Age</label>
						</div>
						<div class="form-floating my-4">
							<input
								type="text"
								class="form-control"
								id="input-address"
								name="address"
								placeholder="Address"
								value="<%= data.biodata.address %>"
								form="updateSubmit"
							/>
							<label for="input-address">Address</label>
						</div>
						<div class="form-floating my-4">
							<input
								type="text"
								class="form-control"
								id="input-city"
								name="city"
								placeholder="City"
								value="<%= data.biodata.city %>"
								form="updateSubmit"
							/>
							<label for="input-city">City</label>
						</div>
						<div class="form-floating my-4">
							<input
								type="number"
								class="form-control"
								id="input-win"
								name="win"
								placeholder="Win"
								value="<%= data.history.win %>"
								form="updateSubmit"
							/>
							<label for="input-win">Win</label>
						</div>
						<div class="form-floating my-4">
							<input
								type="number"
								class="form-control"
								id="input-lose"
								name="lose"
								placeholder="Lose"
								value="<%= data.history.lose %>"
								form="updateSubmit"
							/>
							<label for="input-lose">Lose</label>
						</div>
						<div class="form-floating my-4">
							<input
								type="number"
								class="form-control"
								id="input-draw"
								name="draw"
								placeholder="Draw"
								value="<%= data.history.draw %>"
								form="updateSubmit"
							/>
							<label for="input-draw">Draw</label>
						</div>
						<div class="btn-group my-4 d-flex flex-column flex-md-row justify-content-md-center">
							<form id="updateSubmit" action="/profile/<%= data.uuid %>" method="POST">
								<button type="submit" class="btn-confirm my-2 me-md-4">Update</button>
							</form>
							<form id="logoutSubmit" action="/logout" method="GET">
								<button type="submit" class="btn-back my-2">Logout</button>
							</form>
						</div>
					</div>
					<form action="/delete/<%= data.uuid %>" method="POST" class="profile__delete-btn">
						<button type="submit">Delete Account</button>
					</form>
				</div>
			</div>

			<%- include('partial/footer') %>
		</div>
	</body>
</html>
